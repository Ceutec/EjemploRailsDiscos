<p id="notice"><%= notice %></p>

<h1>Listing Discos</h1>

<%= render 'ejemplo' %>

<table class="centered">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Autor</th>
      <th>Titulo</th>
      <th>Imagen</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discos.each do |disco| %>
      <tr>
        <td>
          <% if User.find_by_id(disco.user_id) %>
            <%= disco.user.email %>
          <% end %>
        </td>
        <td><%= disco.autor %></td>
        <td><%= disco.titulo %></td>
        <td>
          <img src="<%= disco.imagen %>" width="300"/>
        </td>
        <td><%= disco.descripcion %></td>
        <td>
          <a href="/discos/<%= disco.id %>" class="btn-floating btn-large waves-effect waves-light red">
            <i class="material-icons">
              pageview
            </i>
          </a>
        </td>
        <td>
				<a href="/discos/<%= disco.id %>/edit" class="btn-floating btn-large waves-effect waves-light red">
						<i class="material-icons">
							mode_edit
						</i>
					</a>
				</td>
        <td>
          <!-- Nuevo link -->
          <a data-method="delete" href="/discos/<%= disco.id %>" data-confirm="Seguro?" class="btn-floating btn-large waves-effect waves-light red">
            <i class="material-icons">delete</i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/discos/new" class="btn-floating btn-large waves-effect waves-light red">
  <i class="material-icons">add</i>
</a>











