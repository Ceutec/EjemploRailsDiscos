<div class="row">



<%= form_for(@disco, :html => {:class => 'col s12'}) do |f| %>
  <% if @disco.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@disco.errors.count, "error") %> prohibited this disco from being saved:</h2>

      <ul>
      <% @disco.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :autor %>
      <%= f.text_field :autor, class: "validate" %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :titulo %>
      <%= f.text_field :titulo, class: "validate" %>
    </div>
  </div>

  <div class="file-field input-field">
    <div class="btn">
      <span>Imagen</span>
        <%= f.file_field :imagen %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :descripcion %>
      <%= f.text_area :descripcion, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>
</div>
